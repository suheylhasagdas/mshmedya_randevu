@inject Core.Helpers.Media.Abstract.IButtonService _rbb
@model Model.Dtos.Sessions.SessionsDto
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel"> Seans Güncelle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <form id="UpdateSessionsForm">
        <div class="col-12 mb-3">
            <label>Başlangıç</label>
            @Html.TextBoxFor(x => x.StartTime, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Bitiş</label>
            @Html.TextBoxFor(x => x.EndTime, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Açıklama</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control form-control-sm ", type = "text" })
        </div>

    </form>
</div>
<div class="modal-footer">
    @_rbb.PageCreate(buttonId: "UpdateSessions")
</div>


<script>

    $(function () {
        KTSummernoteDemo.init();
    });

</script>
