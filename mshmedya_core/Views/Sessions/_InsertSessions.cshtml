@inject Core.Helpers.Media.Abstract.IButtonService _rbb
@model Model.Dtos.Sessions.SessionsDto
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Yeni Seans Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <form id="InsertSessionsForm">
        <div class="row">
            <div class="offset-1 col-5 mb-3">
                <label>Başlangıç</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.StartTime, new { @class = "form-control form-control-sm time-input text-center", type = "text" })
                </div>
            </div>
            <div class="col-5 mb-3">
                <label>Bitiş</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.EndTime, new { @class = "form-control form-control-sm time-input text-center", type = "text" })
                </div>
            </div>
            <div class="offset-1 col-11 mb-3">
                <label>Açıklama</label>
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control form-control-sm ", type = "text" })
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    @_rbb.PageCreate(buttonId: "InsertSessions")
</div>


<script>

    $(function () {
        KTSummernoteDemo.init();
        MshTimePicker();
    });

</script>
