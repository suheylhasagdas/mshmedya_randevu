@inject Core.Helpers.Media.Abstract.IButtonService _rbb
@model Model.Dtos.Customers.CustomersDto
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Yeni Müşteri Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <form id="InsertCustomersForm">
        <div class="col-12 mb-3">
            <label>Ad</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Soyad</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>E-Posta</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Cinsiyet</label>
            @Html.DropDownListFor(x => x.Gender, new List<SelectListItem>() { new SelectListItem { Text = "Seçiniz" }, new SelectListItem { Text = "Erkek", Value = "E" }, new SelectListItem { Value = "K", Text = "Kadın" } }, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Telefon</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3 pr-3">
            <label>Adres</label>
            @Html.TextAreaFor(x => x.Address, new { @class = "form-control form-control-sm summernote", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Ülke</label>
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Şehir</label>
            @Html.TextBoxFor(x => x.City, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
    </form>
</div>
<div class="modal-footer">
    @_rbb.PageCreate(buttonId: "InsertCustomers")
</div>


<script>

    $(function () {
        KTSummernoteDemo.init();
    });

</script>
