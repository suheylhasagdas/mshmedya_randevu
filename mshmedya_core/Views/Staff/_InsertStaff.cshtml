@inject Core.Helpers.Media.Abstract.IButtonService _rbb
@model Model.Dtos.Staff.StaffDto
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Yeni Personel Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <form id="InsertCustomersForm">
        <div class="col-12 mb-3">
            <label>Ad</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Soyad</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>E-Posta</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Telefon</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-sm ", type = "text" })
        </div>
        <div class="col-12 mb-3">
            <label>Renk (randevu görüntülemede kullanılır)</label>
            @Html.TextBoxFor(x => x.ColorCode, new { @class = "form-control form-control-sm ", style="max-width:160px;", type = "color" })
        </div>

    </form>
</div>
<div class="modal-footer">
    @_rbb.PageCreate(buttonId: "InsertStaff")
</div>


<script>

    $(function () {
        KTSummernoteDemo.init();
    });

</script>
